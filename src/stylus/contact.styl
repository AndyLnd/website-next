.contact-wrapper
  margin-top: 2.5rem

.contact-form
  input, textarea
    width: 100%
    display: block
    margin-bottom: 1rem
  
  input, textarea, button
    border: 3px solid $highlightColor
    background: transparent
    outline: none
    box-shadow: none
    color: $highlightColor
    padding: .7rem
    font-size: 1.5rem
    font-family: $fontFamily
    font-weight: 300
  
  textarea
    resize: none