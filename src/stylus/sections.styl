.section
  padding: 15px

  p
    font-family: $sans
    font-weight: 300
    line-height: 1.4

.section--intro
  background: linear-gradient(to bottom, $primary0 0%, $primary25 100%)
  color: $white
  padding-bottom: 100px

.section.imprint-intro
  padding-bottom: 15px

.headline
  text-align: center
  padding: 2.5rem 0
  
  h1
    text-transform: uppercase
    font-weight: 900
  
  h2
    font-weight: 300
    max-width: 650px
    margin: 0 auto
    line-height: 1.3

.section--intro-overlap
  position: relative
  transform: translateY(-100px)
  margin-bottom: -100px

.video-teaser
  width: 100%
  max-width: 1000px
  margin: 0 auto

  img, video
    width: 100%
    height: auto

.section.section--projects
  padding-top: 0
  padding-bottom: 0

.small-teaser-wrapper
  display: flex
  justify-content: space-between

.small-teaser
  width: 49%
  text-decoration: none

  &:last-child
    display: none
  
  &:hover .small-teaser--image
    transform: translateY(3px)

.small-teaser--image
  min-height: 100px
  background-size: cover
  background-position: center
  flex-grow: 0
  transition: transform .3s
  border-radius: 4px

.small-teaser--headline
  font-size: 1.2rem
  font-weight: 700
  margin: 1rem 0 .8rem 0
  color: #333

.small-teaser--description
  color: $grey

.section--clients
  box-sizing: border-box

.clients
  display: flex
  flex-wrap: wrap
  justify-content: space-between

  >*
    height: 15px
    width: auto
    margin-bottom: 5px
    padding: 5px
    opacity: .7


.blog-teaser
  display: flex
  margin-bottom: 4rem
  color: $black
  text-decoration: none
  cursor: pointer

  &:hover
    .blog-teaser__image
      transform: translateY(3px)

.blog-teaser__image
  width: 20%
  min-width: 150px
  max-width: 300px
  background-image: url('//placehold.it/300x400')
  background-size: cover
  background-position: center
  transition: transform .3s
  border-radius: 4px

.blog-teaser__content
  max-width: 500px
  margin: 10px 0 10px 0
  margin-left: 15px

.blog-introtext
  display: none
  color: $grey
  font-weight: 300
  font-size: 1.1rem
  line-height: 1.4

.blog-headline
  font-size: 1.5rem
  font-weight: 700
  margin: .5rem 0

.blog-date
  font-weight: 300
  font-size: .9rem
  color: $grey

.section.section--map
  width: 100%
  box-sizing: border-box
  height: 500px
  position: relative
  padding: 0

#map
  height: 100%
  width: 100%

.map-gradient
  height: 200px
  background: linear-gradient(to bottom, $white 0%, transparent 100%)
  position: absolute
  z-index: 1
  width: 100%

.mapboxgl-ctrl .mapboxgl-ctrl-compass
  display: none

.section--footer
  background: linear-gradient(to bottom, $primary75 0%, $primary100 100%)
  color: $white
  padding: 3rem 15px

.footer-grid
  display: flex
  margin-top: 2rem
  max-width: 500px
  justify-content: space-between

.footer-list
  list-style: none
  padding: 0
  margin: 0
  font-weight: 300
  line-height: 1.4
  font-size: .9rem

  li a
    color: $white
    text-decoration: none

    &:hover
      border-bottom: 1px solid $white

.adress
  margin-bottom: 1.5rem

@media screen and (min-width: 400px)
  .small-teaser--image
    min-height: 120px

@media screen and (min-width: 768px)
  .section
    padding: 30px

  .blog-introtext
    display: block
  
  .blog-teaser__content
    margin-left: 30px
  
  .section--intro
    padding-bottom: 200px
  
  .section--intro-overlap
    transform: translateY(-200px)
    margin-bottom: -200px
  
  .clients >*
    height: 20px

  .small-teaser
    width: 32%

    &:last-child
      display: block
  
  .small-teaser--image
    height: 130px

  .section--footer
    padding-top: 4rem
    padding-bottom: 4rem

  .footer-list
    font-size: 1rem
    line-height: 1.6


@media screen and (min-width: 1024px)
  .section--intro
    padding-bottom: 300px
  
  .section--intro-overlap
    transform: translateY(-300px)
    margin-bottom: -300px

  .clients >*
    height: 27px
    padding: 8px
    margin-bottom: 8px

  .blog-teaser__content
    margin-left: 35px
  
  .blog-headline
    font-size: 2rem

  .small-teaser--image
    height: 160px

  .small-teaser--headline
    font-size: 1.4rem
