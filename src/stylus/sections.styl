.section
  padding: 15px

.section--intro
  background: linear-gradient(to bottom, $primary0 0%, $primary25 100%)
  color: $white
  padding-bottom: 100px

.headline
  text-align: center
  padding: 2.5rem 0
  
  h1
    text-transform: uppercase
    font-weight: 900
  
  h2
    font-weight: 100
    max-width: 650px
    margin: 0 auto
    line-height: 1.3

.section--intro-overlap
  position: relative
  transform: translateY(-100px)
  margin-bottom: -100px

.video-teaser
  width: 100%
  max-width: 1000px
  margin: 0 auto

  img, video
    width: 100%
    height: auto
    display: block

.small-teaser-wrapper
  display: flex
  justify-content: space-between

.small-teaser
  width: 49%
  min-height: 120px
  background-image: url('https://placehold.it/300x400')
  background-size: cover
  background-position: center
  flex-grow: 0

  &:last-child
    display: none

.section--clients
  box-sizing: border-box

.clients
  display: flex
  flex-wrap: wrap
  justify-content: space-between

  >*
    height: 15px
    width: auto
    margin-bottom: 5px
    padding: 5px
    opacity: .7


.section--contact
  padding-top: 2rem
  padding-bottom: 2rem
  background: linear-gradient(to bottom, $primary25 0%, $primary50 100%)
  color: $white

.blog-teaser
  display: flex
  margin-bottom: 4rem
  color: $black
  text-decoration: none
  cursor: pointer

  &:hover
    background: $primary50

.blog-teaser__image
  width: 20%
  min-width: 150px
  max-width: 300px
  background-image: url('//placehold.it/300x400')
  background-size: cover
  background-position: center

.blog-teaser__content
  max-width: 500px
  margin-left: 15px

.blog-introtext
  display: none

.blog-headline
  font-size: 2rem
  font-weight: 700
  margin: .5rem 0

.blog-date
  font-weight: 300
  font-size: .9rem

.section.section--map
  width: 100%
  box-sizing: border-box
  height: 500px
  position: relative
  padding: 0

#map
  height: 100%
  width: 100%

.section--footer
  background: linear-gradient(to bottom, $primary75 0%, $primary100 100%)
  color: $white
  padding: 4rem 15px

.footer-grid
  display: flex
  margin-top: 2rem

.footer-list
  list-style: none
  padding: 0
  margin: 0

@media screen and (min-width: 768px)
  .section
    padding: 30px

  .blog-introtext
    display: block
  
  .section--intro
    padding-bottom: 200px
  
  .section--intro-overlap
    transform: translateY(-200px)
    margin-bottom: -200px
  
  .clients >*
    height: 20px

@media screen and (min-width: 1024px)
  .section--intro
    padding-bottom: 300px
  
  .section--intro-overlap
    transform: translateY(-300px)
    margin-bottom: -300px

  .clients >*
    height: 25px