.teaser
  position: relative
  cursor: pointer

.teaser__image
  min-height: 250px
  position: relative
  background-size: cover
  background-position: center

  &:after
    content: ""
    position: absolute
    width: 100%
    height: 120px
    background: linear-gradient(to bottom, rgba(255,255,255,0) 0%, #010101 100%)
    bottom: 0
    opacity: 1
    transition: opacity .3s

.teaser__title
  position: absolute
  bottom: 0
  padding: 1rem
  font-size: 1.5rem
  padding: 1rem
  font-weight: 400
  -webkit-font-smoothing: antialiased

.teaser:hover

  .teaser__image:after
    opacity: .8

@media screen and (min-width: 768px)
  .col-sm-4 .teaser__image
    min-height: 210px
  