.video-teaser
  width: 100%
  max-width: 1000px
  margin: 0 auto

  img
    width: 100%
    display: block
    height: auto

  .small-teaser--description
    display: none

  .small-teaser--headline
    margin-bottom: 0

.section.section--projects
  padding-top: 0
  padding-bottom: 0

.small-teaser-wrapper
  display: flex
  justify-content: space-between

.small-teaser
  width: 49%
  text-decoration: none

  &:last-child
    display: none

.small-teaser--image__wrapper,
.blog-teaser__image__wrapper
  overflow: hidden
  height: 100px
  border-radius: 4px
  position: relative
  transform: translateZ(0)

.small-teaser--image
  background-size: cover
  background-position: center
  transition: transform .3s
  height: 100%

.small-teaser--headline
  font-size: 1.84rem
  font-weight: 700
  margin: 1rem 0 .8rem 0
  color: #333

.small-teaser--description
  color: $grey

.teaser--text
  font-family: $sans
  font-size: 1.6rem
  max-width: 620px
  line-height: 1.3
  font-weight: 400

.blog-teaser
  display: flex
  margin-bottom: 4rem
  color: $black
  text-decoration: none
  cursor: pointer

.blog-teaser__image__wrapper
  width: 25%
  min-width: 125px
  max-width: 300px

.blog-teaser__image
  background-size: cover
  background-position: center
  transition: transform .3s
  width: 100%
  height: 100%

.blog-teaser__content
  max-width: 500px
  margin-left: 15px

.blog-introtext
  display: none
  color: $grey
  margin: .5rem 0

.blog-headline
  margin-top: .2rem
  margin-bottom: .2rem

.blog-date
  font-size: 1.2rem
  color: $grey
  line-height: 1.3rem;

.teaser--placeholder
  background-image: linear-gradient(180deg, #eee 10%, rgba(255,255,255,0) 100%);

  &:after
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
    content: 'webkid'
    color: #bbb
    font: inherit
    font-size: 20px

@media screen and (min-width: 400px)
  .small-teaser--image__wrapper
    height: 120px

@media screen and (min-width: 512px)
  .blog-introtext
    display: block

@media screen and (min-width: 768px)
  .blog-teaser__content
    margin-left: 30px

  .small-teaser
    width: 32%

    &:last-child
      display: block

  .small-teaser--image__wrapper,
  .blog-teaser__image__wrapper
    height: 130px

  .video-teaser
    .small-teaser--description
      display: block

    .small-teaser--headline
      margin-bottom: .7rem

  .teaser--text
    font-size: 1.4rem


@media screen and (min-width: 1024px)
  .blog-teaser__content
    margin-left: 35px

  .blog-headline
    font-size: 1.5rem

  .blog-date
    font-size: 0.9rem

  .small-teaser--image__wrapper
    height: 160px

  .small-teaser--headline
    font-size: 1.4rem
