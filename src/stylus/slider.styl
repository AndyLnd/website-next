.swipe
  overflow hidden
  visibility hidden
  position relative

.swipe-wrap
  overflow hidden
  position relative

  & > div
    float left
    width 100%
    position relative
    overflow hidden

.slide
  background: $white

.slider-controls
  position: absolute
  bottom: 5px
  display: flex
  list-style: none
  padding: 0
  margin: 0 auto
  width: 100%
  max-width: 200px
  justify-content: center
  left: 0
  right: 0

  li
    width: 4px
    height: 4px
    background: rgba($grey, .5)
    // border: 1px solid $white
    border-radius: 50%
    margin: 3px

    &.active
      background: $primary0

.video-teaser--content
  position: absolute
  width: 100%
  bottom: 0
  padding: 20px
  box-sizing: border-box
  z-index: 10

  .small-teaser--headline
    color: $black
    font-size: 1.2rem
    max-width: 400px

.video-teaser--button
.portfolio-button
  background: transparent
  border: 2px solid $black
  border-radius: 3px
  font-family: $sans
  font-size: .8rem
  color: $black
  padding: .4em .8em
  text-decoration: none
  transition: background .3s, color .3s, border .3s
  margin-top: 1rem
  display: none

  &:hover
    background: $primary25
    color: white
    border: 2px solid $primary75

.video-teaser--headline
  text-align: center

.portfolio-button
  display: block
  margin-top: 0
  text-align: center
  border-color: $primary0
  color: $primary0
  padding: .5rem 0
  font-size: 1rem

.slider-gradient
  position: absolute
  height: 100%
  background: linear-gradient(0, rgba(255,255,255,1) 17%, rgba(255,255,255,0) 100%);
  width: 100%
  z-index: 5
  bottom: 0

.bg-gif
.bg-video
  position: absolute
  width: 100%
  top: 0
  left: 0
  opacity: 0
  display: none

.slide.playing
  .bg-gif
  .bg-video
    opacity: 1

  .bg-placeholder
    opacity: 0

@media screen and (min-width: 500px)
  .section--portfolio-link
    display: none

  .video-teaser--button
    font-size: 1rem
    display: inline-block
  
  .video-teaser--headline
    text-align: left
  
  .slider-controls li
    height: 8px
    width: 8px

@media screen and (min-width: 768px)
  .video-teaser--content
    bottom: 15px

    .small-teaser--headline
      font-size: 1.5rem

@media screen and (min-width: 1024px)
  .video-teaser--content 
    .small-teaser--headline
      font-size: 2rem