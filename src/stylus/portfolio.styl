.section__projects--highlight
  width: 100%
  padding-bottom: 200px

  .project--highlighted
    max-width: 1000px
    margin: 0 auto

  display: flex
  flex-direction: row
  flex-wrap: wrap
  justify-content: space-between

  background: linear-gradient(to bottom, $primary0 0%, $primary25 100%)
  color: $white

.project__image--higlighted
  max-width: 535px
  flex: 1

.project__info
  flex: 1
  padding: 1em

  font-weight: 700
  h3
    text-transform: uppercase


.section__projects
  max-width: 280px
  display: flex
  flex: 0 1 auto
  flex-wrap: wrap
  flex-direction: row
  align-content: flex-start

  padding: 15px

  .project__image
    width: 100%

  .project__info
    h4
      text-transform: uppercase
