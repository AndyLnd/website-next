.header
  padding: 1.5rem 0
  max-width: 1200px
  margin: 0 auto
  padding-left: 50px
  position: relative

.logo
  text-transform: uppercase
  font-size: 2rem
  font-weight: 200
  -webkit-font-smoothing: antialiased

.logo-dot
  position: fixed
  width: 40px
  height: 40px
  border-radius: 50%
  margin-top: -35px
  margin-left: -60px
  background: $highlightColor

@media screen and (min-width: 768px)
  .header
    padding-left: 100px
  
  .logo-dot
    margin-top: -40px
    margin-left: -70px