$serif = "freight-micro-pro", serif
$sans = "brandon-grotesque", sans-serif

html, body
  font-size: 10px
  font-family: $sans
  font-weight: 400
  font-style: normal

h1
  margin-bottom: 3rem
  font-family: $sans
  font-weight: 900
  font-size: 4.0rem
  text-transform: uppercase

h2
  margin-bottom: 3rem
  font-family: $sans
  font-weight: 500
  font-size: 3.2rem

h3
  margin-bottom: 3rem
  font-family: $sans
  font-weight: 500
  font-size: 2.78rem

h4
  margin-bottom: 3rem
  font-family: $sans
  font-weight: 500
  font-size: 2.42rem

h5
  margin-bottom: 3rem
  font-family: $sans
  font-weight: 500
  font-size: 2.11rem

h6
  margin-bottom: 3rem
  font-family: $sans
  font-weight: 500
  font-size: 1.84rem

p, a
  font-family: $sans
  font-weight: 300
  font-size: 1.4rem
  max-width: 620px

.text,
.section--blogpost p,
.section--blogpost p a
  font-family: $serif
  font-size: 1.8rem
  letter-spacing: 0.015rem
  line-height: 1.8
  text-rendering: optimizeLegibility
  -moz-font-feature-settings: "liga" on

@media screen and (min-width: 768px)
  html, body
    font-size: 12px

  .section--blogpost p,
  .section--blogpost p a
    font-size: 1.7rem

@media screen and (min-width: 1024px)
  .section--blogpost p,
  .section--blogpost p a
    font-size: 1.5rem

@media screen and (min-width: 1024px)
  html, body
    font-size: 14px
